@model Attendance.Data.Entities.Student

<div class="p-4 student-delete-modal" role="dialog" aria-modal="true" aria-labelledby="student-delete-title">
    <h3 id="student-delete-title" class="text-lg font-semibold mb-2">هشدار...</h3>
    <p class="mb-4 text-sm text-gray-600">
        آیا از غیرفعال کردن اطلاعات دانش‌آموزی با نام:
        <strong class="font-bold text-rose-900">@Model.FirstName @Model.LastName</strong>
        اطمینان دارید؟
    </p>

    <form id="student-delete-form" method="post" asp-action="DeletePartialConfirmed" asp-controller="Students" class="space-y-4">
        @Html.AntiForgeryToken()

        <input type="hidden" name="id" value="@Model.Id" />

        <div>
            <label for="deleteInactiveReason" class="block text-sm">دلیل غیرفعال‌سازی</label>
            <textarea id="deleteInactiveReason" name="InactiveReason" required
                      class="mt-1 block w-full rounded-md border px-3 py-2"></textarea>
            <div id="inactiveReasonError" class="text-rose-600 text-sm mt-2 hidden" role="alert" aria-live="assertive"></div>
        </div>

        <div class="flex items-center justify-center gap-2">
            <button type="submit" id="student-delete-confirm-btn" class="px-2 py-2 rounded bg-rose-700 text-slate-100 text-sm hover:bg-rose-900 transition">
                غیرفعال کردن اطلاعات دانش‌آموز
            </button>
            <button type="button" data-modal-close class="px-2 py-2 rounded border text-sm hover:bg-slate-300 transition">
                انصراف و بازگشت
            </button>
        </div>
    </form>
</div>
