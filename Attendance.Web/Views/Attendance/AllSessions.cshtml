@model Attendance.Data.VModels.ArchivedSess.SessionsIndexViewModel
@using System.Net
@using Attendance.Web.Helpers
@{
    ViewData["Title"] = "تمام جلسات";
}
<!-- کارت و هدر -->
<div class="bg-white rounded-lg border p-6 space-y-4">
    <div class="flex items-center justify-between gap-4">
        <div>
            <h1 class="text-lg font-semibold">اطلاعات کلیه جلسات ثبت شده در سامانه</h1>
            <div class="text-sm text-slate-500">نمایش جلسات ذخیره‌شده در سیستم</div>
        </div>
        <div class="flex items-center gap-3">
            <a asp-action="CreateWizard" asp-controller="Attendance" class="inline-block bg-blue-100/70 font-bold text-slate-800 px-3 py-2 rounded hover:bg-blue-200 text-slate-100 transition">ایجاد جلسه جدید</a>
            <a asp-action="Index" asp-controller="Home" class="inline-block px-3 py-2 bg-slate-800 text-slate-100 rounded hover:bg-blue-500 transition">بازگشت</a>
        </div>
    </div>
    <hr class="border-slate-200">
    <div class="bg-slate-100/50 rounded-lg border border-dashed p-2">
        <div class="flex-1">
            <div id="sessions-stats" class="grid grid-cols-1 md:grid-cols-3 text-center gap-3 text-sm">
                <div class="bg-blue-100/50 rounded-lg p-2">
                    <div class="text-sm font-bold text-blue-800">
                        تعداد کل جلسات ثبت شده :
                        <span id="stat-total" class="font-bold text-blue-800"></span>
                        <span class="text-sm text-blue-800"> جلسه</span>
                    </div>
                </div>
                <div class="bg-blue-100/50 rounded-lg p-2">
                    <div class="text-sm font-bold text-blue-800">
                       تعداد کل جلسات فعال :
                        <span id="stat-active" class="font-bold text-blue-800"></span>
                        <span class="text-sm text-blue-800"> جلسه</span>
                    </div>
                </div>
                <div class="bg-rose-100/50 rounded-lg p-2">
                    <div class="text-sm font-bold text-rose-800">
                        تعداد کل جلسات بایگانی شده :
                        <span id="stat-archived" class="font-bold text-rose-800"></span>
                        <span class="text-sm text-rose-800"> جلسه</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bg-blue-100/30 rounded-lg border border-blue-200  border-dashed p-2">
        <div class="flex-1">
            <div class="flex items-center justify-center gap-4">
                <form method="get" class="flex items-center gap-2">
                    <input name="search" value="@(WebUtility.HtmlDecode(Model?.Search ?? ""))" placeholder="نام جلسه مورد نظر خود را وارد نمایید" class="px-3 py-2 border rounded w-80 text-sm" autocomplete="off" />
                    <button type="submit" class="inline-block bg-blue-100/70 font-bold text-slate-800 px-3 py-2 rounded hover:bg-blue-200 text-slate-100 transition">جستجو</button>
                    <label class="flex items-center gap-2 text-sm text-slate-700">
                        <span>تعداد صفحات:</span>
                        <select id="pageSizeSelector" name="pageSize" class="px-2 py-1 border rounded text-sm">
                            <option value="5" selected='@(Model.PageSize == 5 ? "selected" : null)'>5</option>
                            <option value="10" selected='@(Model.PageSize == 10 ? "selected" : null)'>10</option>
                            <option value="25" selected='@(Model.PageSize == 25 ? "selected" : null)'>25</option>
                            <option value="50" selected='@(Model.PageSize == 50 ? "selected" : null)'>50</option>
                        </select>
                    </label>
                </form>
            </div>
        </div>
    </div>

    <div class="bg-slate-100/20 border rounded">
        <table class="min-w-full divide-y divide-slate-100">
            <thead class="bg-blue-100/20">
                <tr>
                    @* <th class="px-3 py-2 text-center text-sm">شناسه</th> *@
                    <th class="px-3 py-2 font-bold text-right text-sm">عنوان جلسه</th>
                    <th class="px-3 py-2 font-bold text-center text-sm">تاریخ جلسه</th>
                    <th class="px-3 py-2 font-bold text-center text-sm">مکان برگذاری</th>
                    <th class="px-3 py-2 font-bold text-center text-sm">تعداد افراد</th>
                    <th class="px-3 py-2 font-bold text-center text-sm">وضعیت جلسه</th>
                    <th class="px-3 py-2 font-bold text-center text-sm">عملیات</th>
                </tr>
            </thead>
            <tbody id="allsessions-table-body" class="bg-white divide-y divide-slate-100">
                @if (Model?.Sessions == null || !Model.Sessions.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center font-bold py-8 text-slate-500">هیچ جلسه‌ای یافت نشد.</td>
                    </tr>
                }
                else
                {
                    foreach (var s in Model.Sessions)
                    {
                        // --- امن‌سازی مقادیر (decode سپس encode) ---
                        var rawTitle = Convert.ToString(s.Title ?? "-");
                        var titleSafe = WebUtility.HtmlEncode(WebUtility.HtmlDecode(rawTitle));

                        // تاریخ شمسی: اگر DateShamsi از قبل رشته است از آن استفاده می‌کنیم، در غیر اینصورت از PersianDateConverter
                        string dateShamsiStr;
                        try
                        {
                            if (!string.IsNullOrWhiteSpace(Convert.ToString(s.GetType().GetProperty("DateShamsi")?.GetValue(s, null))))
                            {
                                dateShamsiStr = Convert.ToString(s.GetType().GetProperty("DateShamsi")?.GetValue(s, null)) ?? "-";
                            }
                            else
                            {
                                // اگر property Date (DateTime?) دارید از آن تبدیل کن
                                var dtProp = s.GetType().GetProperty("Date")?.GetValue(s, null) as DateTime?;
                                dateShamsiStr = PersianDateConverter.ToShamsiString(dtProp) ?? "-";
                            }
                        }
                        catch
                        {
                            dateShamsiStr = "-";
                        }
                        dateShamsiStr = WebUtility.HtmlEncode(dateShamsiStr);

                        // location
                        var rawLoc = Convert.ToString(s.Location ?? "-");
                        var locationSafe = WebUtility.HtmlEncode(WebUtility.HtmlDecode(rawLoc));

                        // records count: سعی کن property RecordsCount را بخوانی، در غیر اینصورت از Records collection استفاده کن
                        int recordsCount = 0;
                        try
                        {
                            var rcProp = s.GetType().GetProperty("RecordsCount");
                            if (rcProp != null)
                            {
                                var rcVal = rcProp.GetValue(s, null);
                                if (rcVal is int ic) recordsCount = ic;
                                else recordsCount = Convert.ToInt32(rcVal ?? 0);
                            }
                            else
                            {
                                var recordsEnum = s.GetType().GetProperty("Records")?.GetValue(s, null) as System.Collections.IEnumerable;
                                if (recordsEnum != null)
                                {
                                    int c = 0;
                                    foreach (var _ in recordsEnum) c++;
                                    recordsCount = c;
                                }
                            }
                        }
                        catch
                        {
                            recordsCount = 0;
                        }

                        <tr data-session-id="@s.Id">
                            @* <td class="px-3 py-2 text-center text-sm">@Convert.ToString(s.Id)</td> *@
                            <td class="px-3 py-2 font-bold text-right text-sm">@Html.Raw(titleSafe)</td>
                            <td class="px-3 py-2 font-bold text-center text-sm">@Html.Raw(dateShamsiStr)</td>
                            <td class="px-3 py-2 font-bold text-center text-sm">@Html.Raw(locationSafe)</td>
                            <td class="px-3 py-2 font-bold text-center text-sm">@recordsCount</td>
                            <td class="px-3 py-2 font-bold text-center text-sm">
                                @if (s.DeletedAt == null)
                                {
                                    <span class="inline-block px-2 py-1 rounded text-sm font-semibold text-teal-800 bg-teal-100">فعال</span>
                                }
                                else
                                {
                                    <span class="inline-block px-2 py-1 rounded text-sm font-semibold text-rose-800 bg-rose-100">بایگانی‌شده</span>
                                }
                            </td>
                            <td class="px-3 py-2 text-center text-sm space-x-2">
                                <a asp-action="SessionDetails" asp-route-id="@s.Id" class="inline-block px-2 py-1 bg-slate-100 rounded hover:bg-slate-200">جزئیات</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- Pagination (unchanged) -->
    <div class="mt-4 flex items-center justify-between gap-2">
        <div class="text-sm font-bold text-slate-800">
            شماره صفحه : <span class="font-bold">@Model.Page</span> از <span class="font-bold">@Model.TotalPages</span>
        </div>

        <div class="inline-flex items-center">
            <nav class="inline-flex items-center rounded-md gap-2" role="navigation" aria-label="Pagination">
                <a asp-action="AllSessions"
                   asp-route-page="@(Model.Page - 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-search="@Model.Search"
                   class="px-2 py-1 font-bold border text-sm gap-2 rounded @(Model.Page <= 1 ? "opacity-50 pointer-events-none bg-slate-100" : "bg-white hover:bg-slate-50")">
                    قبلی
                </a>

                <span class="px-3 py-1 font-bold rounded-md bg-blue-800 text-sm gap-2 text-slate-100">
                    @Model.Page
                </span>

                <a asp-action="AllSessions"
                   asp-route-page="@(Model.Page + 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-search="@Model.Search"
                   class="px-2 py-1 font-bold border rounded-md text-sm gap-2 rounded @(Model.Page >= Model.TotalPages ? "opacity-50 pointer-events-none bg-slate-100" : "bg-white hover:bg-slate-50")">
                    بعدی
                </a>
            </nav>
        </div>
    </div>
</div>


@section AllSessionsStudentsScripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const pageSizeSelector = document.getElementById("pageSizeSelector");
            const input = document.getElementById('sessionsSearchInput');
            if (!pageSizeSelector) return;

            pageSizeSelector.addEventListener("change", function () {
                const pageSize = this.value;
                const search = '@Model.Search';
                const url = `@Url.Action("AllSessions", "Attendance")?page=1&pageSize=${pageSize}&search=${encodeURIComponent(search ?? '')}`;
                window.location.href = url;
            });
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            fetch('@Url.Action("GetSessionsStats", "Attendance")')
                .then(r => r.json())
                .then(d => {
                    document.getElementById("stat-total").textContent = d.totalSessions;
                    document.getElementById("stat-active").textContent = d.activeSessions;
                    document.getElementById("stat-archived").textContent = d.archivedSessions;
                })
                .catch(err => {
                    console.error("Stats load error", err);
                });
        });
    </script>
}
