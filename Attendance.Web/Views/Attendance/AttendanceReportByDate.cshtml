@using Attendance.Data.Entities
@{
    ViewData["Title"] = "جستجوی کلیه جلسات ثبت شده";
}
<!-- کارت و هدر -->
<div class="bg-white rounded-lg border p-6 space-y-4">
    <div class="flex items-center justify-between gap-4">
        <div>
            <h1 class="text-lg font-semibold">جستجوی کلیه جلسات ثبت شده در سامانه</h1>
            <div class="text-sm text-slate-500">نمایش از تاریخ تا تاریخ جلسات ذخیره‌شده در سیستم</div>
        </div>
        <div class="flex items-center gap-3">
            <a asp-action="Index" asp-controller="Home" class="inline-block px-3 py-2 bg-slate-800 text-slate-100 rounded hover:bg-blue-500 transition">بازگشت</a>
        </div>
    </div>
    <hr class="border-slate-200">
    <div class="bg-slate-100/50 rounded-lg border border-dashed p-2">
        <div class="flex items-center justify-center">
            <form method="get"
                  id="report-form"
                  class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end mb-6">
                <!-- از تاریخ -->
                <div>
                    <label class="block text-sm font-bold text-slate-700">
                        از تاریخ (شمسی)
                    </label>
                    <input id="fromDateShamsi"
                           name="fromDateShamsi"
                           type="text"
                           class="shamsi-date-input mt-1 block w-full rounded border px-3 py-2
                   text-center focus:outline-none focus:ring-2 focus:ring-teal-200"
                           placeholder="مثلاً 1403/01/01"
                           autocomplete="off" />
                </div>

                <!-- تا تاریخ -->
                <div>
                    <label class="block text-sm font-bold text-slate-700">
                        تا تاریخ (شمسی)
                    </label>
                    <input id="toDateShamsi"
                           name="toDateShamsi"
                           type="text"
                           class="shamsi-date-input mt-1 block w-full rounded border px-3 py-2
                   text-center focus:outline-none focus:ring-2 focus:ring-teal-200"
                           placeholder="مثلاً 1403/01/31"
                           autocomplete="off" />
                </div>
                <!-- Buttons -->
                <div class="flex gap-2">
                    <button type="button"
                            onclick="submitAttendanceReport()"
                            class="px-4 py-2 rounded bg-teal-600 text-white text-sm hover:bg-teal-700">
                        مشاهده گزارش
                    </button>

                    <button type="button"
                            onclick="printAttendanceReport()"
                            class="px-4 py-2 rounded bg-slate-600 text-white text-sm hover:bg-slate-700">
                        خروجی PDF
                    </button>
                </div>

                <!-- Hidden Gregorian Fields -->
                <input type="hidden" name="from" id="fromGregorian" />
                <input type="hidden" name="to" id="toGregorian" />
            </form>
        </div>
    </div>

    <div class="bg-slate-100/20 border rounded">
        <table class="min-w-full bg-blue-100/20">
            <thead>
                <tr>
                    <th class="px-3 py-2 text-right text-sm">تصویر</th>
                    <th class="px-3 py-2 text-center text-sm">نام و نام خانوادگی</th>
                    <th class="px-3 py-2 text-center text-sm">وضعیت حضور</th>
                </tr>
            </thead>
            <tbody id="report-body" class="bg-white divide-y divide-slate-100">
                @foreach (var r in Model.Records)
                {
                    <tr>
                        <td>
                            <img src="@(r.Photo ?? "/uploads/students/default.png")"
                                 class="h-10 w-10 rounded">
                        </td>
                        <td>@r.StudentName</td>
                        <td>
                            @r.Status
                            @if (r.Status == AttendanceStatus.Late && r.LateMinutes.HasValue)
                            {
                                <span class="text-xs text-orange-600">
                                    (@r.LateMinutes دقیقه)
                                </span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section AttendanceReportByDateStudentsScripts {
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/js/shamsi-datepicker.js" asp-append-version="true"></script>
    <script src="~/js/js_Attendance/AttendanceReportByDate.js" asp-append-version="true"></script>
}
