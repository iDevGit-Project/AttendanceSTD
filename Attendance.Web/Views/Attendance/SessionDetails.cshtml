@using Attendance.Web.Helpers
@model Attendance.Data.Entities.AttendanceSession
@{
    ViewData["Title"] = "جزئیات جلسه - " + (Model.Title ?? "");
}

<div class="bg-white rounded-lg border p-6 space-y-4">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-800">@Model?.Title ?? "بدون عنوان"</h1>
            <p class="text-sm text-slate-500">شناسه جلسه: <span class="font-mono">@Model?.Id</span></p>
        </div>

        <div class="text-right">
            <a asp-action="Index" asp-controller="Attendance" class="inline-block px-3 py-2 bg-slate-100 rounded hover:bg-slate-200">بازگشت</a>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="p-3 bg-slate-50 rounded">
            <div class="text-sm text-slate-600">تاریخ جلسه</div>
            <div class="font-bold text-slate-800">
                @{
                    string dateShamsi = "-";
                    if (Model?.Date.HasValue == true)
                    {
                        try
                        {
                            dateShamsi = PersianDateConverter.ToShamsiString(Model.Date.Value) ?? Model.Date.Value.ToString("yyyy-MM-dd");
                        }
                        catch { dateShamsi = Model.Date.Value.ToString("yyyy-MM-dd"); }
                    }
                }
                @dateShamsi
            </div>
        </div>

        <div class="p-3 bg-slate-50 rounded">
            <div class="text-sm text-slate-600">شروع</div>
            <div class="font-bold">
                @{
                    string startDisplay = "-";
                    if (Model?.StartAt.HasValue == true)
                    {
                        // نمایش زمان به صورت ساعت:دقیقه (محلی)
                        startDisplay = Model.StartAt.Value.ToString("HH:mm");
                    }
                }
                @startDisplay
            </div>
        </div>

        <div class="p-3 bg-slate-50 rounded">
            <div class="text-sm text-slate-600">مکان</div>
            <div class="font-bold">@Model?.Location ?? "-"</div>
        </div>
    </div>

    <div class="pt-2">
        <h2 class="text-lg font-semibold text-slate-700">فهرست دانش‌آموزان ( @(Model?.Records?.Count() ?? 0) )</h2>

        <div class="mt-3 overflow-x-auto">
            <form id="attendance-form" class="space-y-4">
                @Html.AntiForgeryToken()
                <input type="hidden" name="sessionId" value="@Model.Id" />

                <table class="min-w-full divide-y divide-slate-100">
                    <thead class="bg-blue-50">
                        <tr>
                            <th class="px-3 py-2 text-right text-sm">تصویر</th>
                            <th class="px-3 py-2 text-center text-sm">نام</th>
                            <th class="px-3 py-2 text-center text-sm">نام خانوادگی</th>
                            <th class="px-3 py-2 text-center text-sm">کد ملی</th>
                            <th class="px-3 py-2 text-center text-sm">عملیات حضور</th>
                            <th class="px-3 py-2 text-center text-sm">یادداشت</th>
                            <th class="px-3 py-2 text-center text-sm">دقایق تأخیر</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-slate-100">
                        @if (Model?.Records == null || !Model.Records.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-slate-500 py-6">هیچ رکوردی وجود ندارد.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var r in Model.Records)
                            {
                                var st = r.Student;
                                // مقدار وضعیت فعلی به صورت عددی (مطابق enum شما) - فرض enum: 1=Present,2=Absent,3=Late,4=Excused
                                var curStatus = (int)r.Status;
                                <tr id="row-@r.Id" class="hover:bg-slate-50">
                                    <td class="px-3 py-2 text-right">
                                        <img src="@(st?.PhotoPath ?? "/uploads/students/default.png")" class="h-10 w-10 object-cover rounded" alt="photo" />
                                    </td>
                                    <td class="px-3 py-2 text-center text-sm">@st?.FirstName</td>
                                    <td class="px-3 py-2 text-center text-sm">@st?.LastName</td>
                                    <td class="px-3 py-2 text-center text-sm">@st?.NationalCode</td>

                                    <td class="px-3 py-2 text-center text-sm">
                                        <div class="flex items-center justify-center gap-2">
                                            <label class="inline-flex items-center gap-2">
                                                <input type="radio" name="status_@r.Id" value="1" class="status-radio" data-record-id="@r.Id" @(curStatus == 1 ? "checked" : "") />
                                                <span class="text-xs">حاضر</span>
                                            </label>
                                            <label class="inline-flex items-center gap-2">
                                                <input type="radio" name="status_@r.Id" value="2" class="status-radio" data-record-id="@r.Id" @(curStatus == 2 ? "checked" : "") />
                                                <span class="text-xs">غایب</span>
                                            </label>
                                            <label class="inline-flex items-center gap-2">
                                                <input type="radio" name="status_@r.Id" value="4" class="status-radio" data-record-id="@r.Id" @(curStatus == 4 ? "checked" : "") />
                                                <span class="text-xs">موجه</span>
                                            </label>
                                            <label class="inline-flex items-center gap-2">
                                                <input type="radio" name="status_@r.Id" value="3" class="status-radio" data-record-id="@r.Id" @(curStatus == 3 ? "checked" : "") />
                                                <span class="text-xs">تأخیر</span>
                                            </label>
                                        </div>
                                    </td>

                                    <td class="px-3 py-2 text-center text-sm">
                                        <input type="text" name="note_@r.Id" class="w-full text-sm border rounded px-2 py-1" value="@(r.Note ?? "")" placeholder="یادداشت..." />
                                    </td>

                                    <td class="px-3 py-2 text-center text-sm">
                                        <input type="number" min="0" name="late_@r.Id" class="w-20 text-sm border rounded px-2 py-1" value="@(r.LateMinutes?.ToString() ?? "")" placeholder="دقیقه" />
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

                <div class="mt-4 flex items-center gap-3">
                    <button type="button" id="saveAttendanceBtn" class="px-4 py-2 bg-green-600 text-white rounded">ذخیره حضور/غیاب</button>
                    <a asp-action="Index" asp-controller="Attendance" class="px-3 py-2 bg-slate-100 rounded hover:bg-slate-200">انصراف</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section SessionDetailsScripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        (function () {
            // helper: read token
            function getAntiForgeryToken() {
                const el = document.querySelector('input[name="__RequestVerificationToken"]');
                return el ? el.value : null;
            }

            function collectRecords() {
                const rows = Array.from(document.querySelectorAll('tr[id^="row-"]'));
                const arr = [];
                for (const row of rows) {
                    const recId = parseInt(row.getAttribute('id').replace('row-', ''), 10);
                    // status radio
                    const sel = row.querySelector('input[name="status_' + recId + '"]:checked');
                    const status = sel ? parseInt(sel.value, 10) : 2; // default Absent
                    const noteEl = row.querySelector('input[name="note_' + recId + '"]');
                    const lateEl = row.querySelector('input[name="late_' + recId + '"]');
                    const note = noteEl ? (noteEl.value || null) : null;
                    const late = lateEl && lateEl.value ? parseInt(lateEl.value, 10) : null;

                    arr.push({
                        recordId: recId,
                        studentId: parseInt(row.dataset ? (row.dataset.studentId || 0) : 0, 10) || undefined,
                        status: status,
                        note: note,
                        lateMinutes: late
                    });
                }
                return arr;
            }

            const btn = document.getElementById('saveAttendanceBtn');
            btn.addEventListener('click', async function () {
                const sessionIdInput = document.querySelector('input[name="sessionId"]');
                const sessionId = sessionIdInput ? sessionIdInput.value : null;
                if (!sessionId) {
                    return Swal.fire({ icon: 'error', title: 'خطا', text: 'شناسه جلسه ناموجود است.' });
                }

                const payload = collectRecords();

                if (!payload.length) {
                    return Swal.fire({ icon: 'warning', title: 'هشدار', text: 'رکوردی برای ذخیره وجود ندارد.' });
                }

                const token = getAntiForgeryToken();
                if (!token) {
                    console.error('AntiForgery token missing in DOM.');
                    return Swal.fire({ icon: 'error', title: 'خطا', text: 'توکن امنیتی پیدا نشد. صفحه را رفرش کنید.' });
                }

                // build formdata: send a single JSON array in 'records' field (سرور ما هر دو حالت را پشتیبانی می‌کند)
                const fd = new FormData();
                fd.append('sessionId', sessionId);
                fd.append('__RequestVerificationToken', token);
                fd.append('records', JSON.stringify(payload));

                Swal.fire({ title: 'در حال ذخیره...', didOpen: () => Swal.showLoading(), allowOutsideClick: false });
                try {
                    const resp = await fetch('@Url.Action("SaveAttendance", "Attendance")', {
                        method: 'POST',
                        credentials: 'same-origin',
                        body: fd
                    });

                    const bodyText = await resp.text();
                    let parsed = null;
                    try { parsed = JSON.parse(bodyText); } catch { /* not json */ }

                    console.log('SaveAttendance response:', resp.status, parsed ?? bodyText);

                    if (!resp.ok) {
                        // try to get friendly message
                        const errorMsg = (parsed && (parsed.error || parsed.message)) ? (parsed.error || parsed.message) : (bodyText || `خطا: ${resp.status}`);
                        Swal.close();
                        return Swal.fire({ icon: 'error', title: 'خطا در ذخیره‌سازی', text: errorMsg });
                    }

                    // success
                    Swal.fire({ icon: 'success', title: 'ذخیره شد', text: parsed && parsed.message ? parsed.message : 'عملیات با موفقیت انجام شد.' })
                        .then(() => {
                            // reload to reflect updates (or update UI in-place)
                            location.reload();
                        });

                } catch (err) {
                    console.error('SaveAttendance unexpected error', err);
                    Swal.close();
                    Swal.fire({ icon: 'error', title: 'خطا', text: 'خطای غیرمنتظره در ذخیره‌سازی' });
                }
            });

            // اضافه: هر ردیف را با data-student-id علامت بزنیم (برای ایمنی)
            document.addEventListener('DOMContentLoaded', function () {
                document.querySelectorAll('tr[id^="row-"]').forEach(tr => {
                    // اگر model رکورد شامل StudentId در ردیف نیست، سعی کن از DOM موجود استفاده کنی؛ در غیر اینصورت null
                    const rid = parseInt(tr.id.replace('row-', ''), 10);
                    // پیدا کردن student id از داخلتری (mvc model binding: رکورد Student.Id در حافظه سرور)
                    const studentCellImg = tr.querySelector('img');
                    // برای ایمنی اگر attribute وجود ندارد آن را 0 قرار می‌دهیم
                    if (!tr.dataset || !tr.dataset.studentId) {
                        // کوشش می‌کنیم attribute اضافه کنیم اگر در مدل سرور موجود باشد:
                        try {
                            const sid = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Records.ToDictionary(rr => rr.Id, rr => rr.StudentId)));
                            // sid یک آبجکت JS است؛ اگر مقدار برای rid هست آن را قرار بده
                            if (sid && sid[rid]) tr.dataset.studentId = sid[rid];
                        } catch (e) {
                            // ignore
                        }
                    }
                });
            });
        })();
    </script>
}

