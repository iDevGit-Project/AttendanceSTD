@using Attendance.Data.Entities
@using Attendance.Web.Helpers
@model Attendance.Data.Entities.AttendanceSession
@{
    ViewData["Title"] = "جزئیات جلسه - " + (Model.Title ?? "");
}
<!-- کارت و هدر -->
<div class="bg-white rounded-lg border p-6 space-y-4">
    <div class="flex items-center justify-between gap-4">
        <div>
            <h2 class="text-xl font-bold text-slate-800">اطلاعات کلیه جلسات ثبت شده </h2>
            <p class="text-sm text-slate-500">نمایش و مدیریت دانش‌آموزان (غیرفعال)</p>
        </div>

        <div class="flex items-center gap-3">
            @if (Model?.DeletedAt == null)
            {
                <button type="button" id="archiveSessionBtn" class="inline-block bg-rose-100/70 text-rose-800 font-bold px-3 py-2 rounded hover:bg-rose-200 transition">
                    بایگانی کردن : <span class="text-rose-800">@((Model.Title))</span> در سیستم
                </button>
            }
            else
            {
                <button type="button" id="unarchiveSessionBtn" class="inline-block bg-teal-100/70 text-teal-800 font-bold px-3 py-2 rounded hover:bg-teal-200 transition">
                    بازیابی : <span class="text-teal-800">@((Model.Title))</span> به سیستم
                </button>
            }
            <button type="button" onclick="printSessionDetailsWithSwal()" class="inline-block bg-blue-100/70 font-bold text-slate-800 px-3 py-2 rounded hover:bg-blue-200 text-slate-100 transition">
                گزارشات
            </button>
            <a asp-action="AllSessions" asp-controller="Attendance" class="inline-block px-3 py-2 bg-slate-800 text-slate-100 rounded hover:bg-blue-500 transition">بازگشت به لیست جلسات</a>
        </div>
    </div>
    <hr class="border-slate-200">
    <div class="bg-slate-100/50 rounded-lg border border-dashed p-2">
        <div class="flex-1">
            <div class="grid grid-cols-1 md:grid-cols-3 text-center gap-3 text-sm">
                <div class="bg-cyan-200/50 rounded-lg p-2">
                    <div class="text-sm text-slate-800">
                        تاریخ برگزاری جلسه:
                        <span class="font-bold text-slate-800">
                            @{
                                string dateShamsi = "-";
                                if (Model?.Date.HasValue == true)
                                {
                                    try { dateShamsi = PersianDateConverter.ToShamsiString(Model.Date.Value) ?? Model.Date.Value.ToString("yyyy-MM-dd"); }
                                    catch { dateShamsi = Model.Date.Value.ToString("yyyy-MM-dd"); }
                                }
                            }
                            @dateShamsi
                        </span>
                    </div>
                </div>
                <div class="bg-cyan-200/50 rounded-lg p-2">
                    <div class="text-sm text-teal-800">
                        ساعت شروع:
                        <span class="font-bold text-slate-800">
                            @{
                                string startDisplay = "-";
                                string periodLabel = "";

                                if (Model?.StartAt.HasValue == true)
                                {
                                    var startAt = Model.StartAt.Value;

                                    startDisplay = startAt.ToString("HH:mm");

                                    periodLabel = startAt.Hour < 12 ? "صبح" : "عصر";
                                }
                            }
                            @startDisplay
                            @if (!string.IsNullOrEmpty(periodLabel))
                            {
                                <span class="mr-1 text-slate-800 text-xs">(@periodLabel)</span>
                            }
                        </span>
                    </div>
                </div>
                <div class="bg-cyan-200/50 rounded-lg p-2">
                    <div class="text-sm text-teal-800">
                        مکان برگزاری جلسه:
                        <span class="font-bold text-slate-800">@((Model?.Location) ?? "-")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bg-slate-100/20 border rounded">
        <form id="attendance-form">
            @Html.AntiForgeryToken()
            <input type="hidden" name="sessionId" value="@Model.Id" />

            <table class="min-w-full divide-y divide-slate-100">
                <thead class="bg-blue-100/20">
                    <tr>
                        <th class="px-3 py-2 text-right text-sm">تصویر</th>
                        <th class="px-3 py-2 text-center text-sm"> نام و نام خانوادگی</th>
                        <th class="px-3 py-2 text-center text-sm">پایه تحصیلی</th>
                        <th class="px-3 py-2 text-center text-sm">نام مدرسه</th>
                        <th class="px-3 py-2 text-center text-sm">وضعیت حضور</th>
                        <th class="px-3 py-2 text-center text-sm">یادداشت</th>
                        <th class="px-3 py-2 text-center text-sm">توضیحات</th>
                    </tr>
                </thead>
                <tbody id="session-details-table-body" class="bg-white divide-y divide-slate-100">
                    @if (Model?.Records == null || !Model.Records.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-slate-500 py-6">هیچ رکوردی وجود ندارد.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var r in Model.Records)
                        {
                            var st = r.Student;
                            <tr id="row-@r.Id" class="hover:bg-slate-50" data-record-id="@r.Id" data-student-id="@(st?.Id ?? 0)">
                                <td class="px-3 py-2 text-right">
                                    <img src="@(st?.PhotoPath ?? "/uploads/students/default.png")" class="h-10 w-10 object-cover rounded" alt="photo" />
                                </td>
                                <td class="px-3 py-2 text-center text-sm">@((st?.FirstName + " " + st?.LastName) ?? "")</td>
                                <td class="px-3 py-2 text-center text-sm">@((st?.Grade) ?? "")</td>
                                <td class="px-3 py-2 text-center text-sm">@((st?.SchoolName) ?? "")</td>
                                <td class="px-3 py-2 text-center text-sm">
                                    @{
                                        int? statusInt = null;
                                        try
                                        {
                                            statusInt = (int)r.Status;
                                        }
                                        catch
                                        {
                                            statusInt = null;
                                        }

                                        var optNone = statusInt == null ? " selected" : "";
                                        var optPresent = statusInt == 1 ? " selected" : "";
                                        var optAbsent = statusInt == 2 ? " selected" : "";
                                        var optLate = statusInt == 3 ? " selected" : "";
                                        var optExcused = statusInt == 4 ? " selected" : "";

                                        var optionsHtml =
                                        "<option value=\"\"" + optNone + ">— انتخاب نشده —</option>"
                                        + "<option value=\"1\"" + optPresent + ">حاضر</option>"
                                        + "<option value=\"2\"" + optAbsent + ">غیبت غیرموجه</option>"
                                        + "<option value=\"4\"" + optExcused + ">غیبت موجه</option>"
                                        + "<option value=\"3\"" + optLate + ">تأخیر</option>";
                                    }
                                    <select class="status-select px-2 py-1 border rounded text-sm"
                                            data-record-id="@r.Id"
                                            data-student-id="@(st?.Id ?? 0)">
                                        @Html.Raw(optionsHtml)
                                    </select>
                                </td>
                                <td class="px-3 py-2 text-center text-sm">
                                    <textarea class="attendance-note px-2 py-1 border rounded text-sm" rows="1"
                                      data-record-id="@r.Id" data-student-id="@(st?.Id ?? 0)">@(r.Note ?? "")</textarea>
                                </td>
                                <td class="px-3 py-2 text-center text-sm">
                                    <input type="number" min="0" step="1"
                                           class="late-minutes px-2 py-1 border rounded text-sm"
                                           placeholder="دقیقه"
                                           value="@(r.LateMinutes.HasValue? r.LateMinutes.Value.ToString() : "")"
                                           data-record-id="@r.Id" data-student-id="@(st?.Id ?? 0)" />
                                </td>
                            </tr>
                        }
                    }
            </table>
            <!-- Action buttons -->
            <div class="flex items-center justify-center gap-4 mt-6 p-4">
                <div class="flex items-center aligap-3">
                    <button type="button" id="saveAttendanceBtn" class="inline-block bg-green-600 text-slate-100 px-3 py-2 rounded hover:bg-green-700 transition">ثبت و ذخیره</button>
                </div>
                <div>
                    <a asp-action="Index" asp-controller="Attendance" class="inline-block px-3 py-2 bg-slate-800 text-slate-100 rounded hover:bg-blue-500 transition">انصراف و بازگشت</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section SessionDetailsScripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/js_HtmlTables/SessionDetails.printWithSwal.js" asp-append-version="true"></script>
    <script>
        (function () {
            const saveBtn = document.getElementById('saveAttendanceBtn');
            if (!saveBtn) return;

            function getAntiForgeryToken() {
                const el = document.querySelector('input[name="__RequestVerificationToken"]');
                return el ? el.value : null;
            }

           function collectRecords() {
            const rows = Array.from(document.querySelectorAll('tbody tr[data-record-id]'));
            const records = [];

            rows.forEach(row => {
                const recordIdAttr = row.getAttribute('data-record-id');
                const studentIdAttr = row.getAttribute('data-student-id');

                const recordId = recordIdAttr && !isNaN(recordIdAttr)
                    ? parseInt(recordIdAttr, 10)
                    : null;

                const studentId = studentIdAttr && !isNaN(studentIdAttr)
                    ? parseInt(studentIdAttr, 10)
                    : null;

                if (!studentId) return;

                /* ---------- STATUS (اصلاح‌شده) ---------- */
                const statusSel = row.querySelector('select.status-select');
                let status = null;
                if (statusSel && statusSel.value !== '') {
                    const v = parseInt(statusSel.value, 10);
                    if (!isNaN(v)) status = v;
                }

                /* ---------- NOTE ---------- */
                const noteEl = row.querySelector('.attendance-note');
                const note = noteEl ? noteEl.value.trim() : null;

                /* ---------- LATE MINUTES ---------- */
                const lateEl = row.querySelector('.late-minutes');
                let lateMinutes = null;
                if (lateEl && lateEl.value !== '') {
                    const v = parseInt(lateEl.value, 10);
                    if (!isNaN(v)) lateMinutes = v;
                }

                records.push({
                    recordId: recordId,
                    studentId: studentId,
                    status: status,          // null یا enum معتبر
                    note: note || null,
                    lateMinutes: lateMinutes
                });
            });

            console.log('Collected records for SaveAttendance:', records.length, records);
            return records;
        }


            saveBtn.addEventListener('click', async function (e) {
                e.preventDefault();

                const sessionId = Number(document.querySelector('input[name="sessionId"]').value);
                if (!sessionId) return Swal.fire({ icon: 'error', title: 'شناسه جلسه پیدا نشد' });

                const records = collectRecords();
                if (!records.length) return Swal.fire({ icon: 'warning', title: 'هیچ رکوردی برای ارسال پیدا نشد.' });

                const token = getAntiForgeryToken();
                if (!token) return Swal.fire({ icon: 'error', title: 'توکن امنیتی پیدا نشد. صفحه را رفرش کنید.' });

                const fd = new FormData();
                fd.append('__RequestVerificationToken', token);
                fd.append('sessionId', String(sessionId));
                fd.append('records', JSON.stringify(records));
                //records.forEach(r => fd.append('records[]', JSON.stringify(r)));

                Swal.fire({ title: 'در حال ذخیره...', didOpen: () => Swal.showLoading(), allowOutsideClick: false });
                try {
                    const resp = await fetch('@Url.Action("SaveAttendance", "Attendance")', {
                        method: 'POST',
                        credentials: 'same-origin',
                        body: fd
                    });

                    const text = await resp.text();
                    let parsed = null;
                    try { parsed = JSON.parse(text); } catch (e) { /* ignore */ }

                    console.log('SaveAttendance response:', resp.status, parsed || text);

                    if (!resp.ok) {
                        const msg = (parsed && (parsed.error || parsed.message)) ? (parsed.error || parsed.message) : (text || `خطا: ${resp.status}`);
                        Swal.close();
                        return Swal.fire({ icon: 'error', title: 'خطا در ذخیره‌سازی', text: msg });
                    }

                    Swal.fire({ icon: 'success', title: 'ذخیره شد', text: (parsed && parsed.message) ? parsed.message : 'اطلاعات ذخیره شد.' })
                        .then(() => {
                            // get sessionId (try variable from scope, otherwise fallback to hidden input)
                            let sid = null;
                            try { sid = typeof sessionId !== 'undefined' && sessionId ? sessionId : null; } catch (e) { sid = null; }
                            if (!sid) {
                                const el = document.querySelector('input[name="sessionId"]');
                                if (el && el.value) sid = Number(el.value);
                            }

                            if (sid) {
                                // Redirect back to CreateWizard and include createdSessionId so wizard shows the quick-link
                                const url = '@Url.Action("CreateWizard", "Attendance")' + '?createdSessionId=' + encodeURIComponent(sid);
                                window.location.href = url;
                            } else {
                                // fallback: reload current page
                                window.location.reload();
                            }
                        });

                } catch (err) {
                    console.error('SaveAttendance fetch error', err);
                    Swal.close();
                    Swal.fire({ icon: 'error', title: 'خطا', text: 'خطای ارتباط با سرور. جزئیات در کنسول.' });
                }
            });
        })();
    </script>
    <style>
        .swal2-validation-message {
            background: #fff1f2; /* معادل Tailwind bg-rose-50 */
            color: #9f1239; /* معادل تقریبی text-rose-700 */
            padding: 0.5rem 1rem; /* px-4 py-2 */
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 0.75rem; /* mt-3 */
            font-size: 0.875rem; /* text-sm */
            direction: rtl;
            text-align: right;
            box-shadow: none;
            white-space: normal;
            word-break: break-word;
        }
    </style>
    <script>
        (function(){
            function getAntiForgeryToken() {
                const el = document.querySelector('input[name="__RequestVerificationToken"]');
                return el ? el.value : null;
            }

            const archiveBtn = document.getElementById('archiveSessionBtn');
            const unarchiveBtn = document.getElementById('unarchiveSessionBtn');

            async function postAjax(url, data) {
                const token = getAntiForgeryToken();
                if (!token) {
                    Swal.fire({ icon: 'error', title: 'توکن امنیتی پیدا نشد', text: 'صفحه را رفرش کنید.' });
                    return null;
                }
                const fd = new FormData();
                fd.append('__RequestVerificationToken', token);
                for (const k in data) {
                    fd.append(k, data[k]);
                }
                try {
                    const resp = await fetch(url, { method: 'POST', credentials: 'same-origin', body: fd });
                    const txt = await resp.text();
                    let json = null;
                    try { json = JSON.parse(txt); } catch (e) { json = null; }
                    return { status: resp.status, ok: resp.ok, json: json, text: txt };
                } catch (err) {
                    console.error('postAjax error', err);
                    return { status: 0, ok: false, error: err };
                }
            }

            if (archiveBtn) {
                archiveBtn.addEventListener('click', async function () {
                    const sid = Number(document.querySelector('input[name="sessionId"]').value);
                    if (!sid) return Swal.fire({ icon: 'error', title: 'شناسه جلسه پیدا نشد' });

                    const confirm = await Swal.fire({
                        title: 'آیا مطمئن هستید؟',
                        text: 'جلسه فوق آرشیو و در صورت نیاز می‌توانید آن را بازگردانی کنید.',
                        icon: 'error',
                        allowOutsideClick: false,
                        allowEscapeKey: true,
                        showCancelButton: true,
                        buttonsStyling: false,
                        confirmButtonText: 'تأیید و ادامه',
                        cancelButtonText: 'انصراف و بازگشت',
                        customClass: {
                            cancelButton: "inline-block w-full justify-between gap-4 px-3 py-2 bg-slate-100 font-bold text-sm text-slate-800 rounded hover:bg-slate-200 transition mt-3",
                            confirmButton: "inline-block w-full justify-between gap-4 px-3 py-2 bg-rose-100/70 font-bold text-rose-800 text-sm rounded hover:bg-rose-300 transition mt-3",
                        },
                    });
                    if (!confirm.isConfirmed) return;

                    Swal.fire({ title: 'در حال بایگانی...', didOpen: () => Swal.showLoading(), allowOutsideClick: false, allowEscapeKey: true });
                    const res = await postAjax('@Url.Action("ArchiveSessionAjax", "Attendance")', { id: sid });
                    Swal.close();
                    if (!res) return;
                    if (!res.ok) {
                        const msg = (res.json && (res.json.error || res.json.message)) ? (res.json.error || res.json.message) : res.text || 'خطا';
                        return Swal.fire({ icon: 'error', title: 'خطا', text: msg });
                    }
                    Swal.fire({ 
                        title: 'آرشیو جلسه با موفقیت انجام شد.', 
                        icon: 'success', 
                        text: (res.json && res.json.message) ? res.json.message : 'جلسه جاری شما آرشیو و بایگانی شد.' ,
                        allowOutsideClick: false,
                        allowEscapeKey: true,
                        showCancelButton: false,
                        buttonsStyling: false,
                        confirmButtonText: 'ثبت نهایی و بازگشت',
                        customClass: {
                            confirmButton: "inline-block w-full justify-between gap-4 px-3 py-2 bg-teal-100/70 font-bold text-teal-800 text-sm rounded hover:bg-teal-300 transition mt-3",
                        },
                        })
                        .then(() => {
                            // بعد از موفقیت برو به صفحه ArchivedSessions
                            window.location.href = '@Url.Action("ArchivedSessions", "Attendance")';
                        });
                });
            }

            if (unarchiveBtn) {
                unarchiveBtn.addEventListener('click', async function () {
                    const sid = Number(document.querySelector('input[name="sessionId"]').value);
                    if (!sid) return Swal.fire({ icon: 'error', title: 'شناسه جلسه پیدا نشد' });

                    Swal.fire({ title: 'در حال بازگردانی...', didOpen: () => Swal.showLoading(), allowOutsideClick: false });
                    const res = await postAjax('@Url.Action("UnarchiveSessionAjax", "Attendance")', { id: sid });
                    Swal.close();
                    if (!res) return;
                    if (!res.ok) {
                        const msg = (res.json && (res.json.error || res.json.message)) ? (res.json.error || res.json.message) : res.text || 'خطا';
                        return Swal.fire({ icon: 'error', title: 'خطا', text: msg });
                    }
                    Swal.fire({ 
                        icon: 'success', 
                        title: 'بازگردانی شد',
                        text: (res.json && res.json.message) ? res.json.message : 'جلسه بازگردانی شد.' ,
                        allowOutsideClick: false,
                        allowEscapeKey: true,
                        showCancelButton: false,
                        buttonsStyling: false,
                        confirmButtonText: 'قبول و بازگشت',
                        customClass: {
                            confirmButton: "inline-block w-full justify-between gap-4 px-3 py-2 bg-teal-100/70 font-bold text-teal-800 text-sm rounded hover:bg-teal-300 transition mt-3",
                        },
                    })
                        .then(() => location.reload());
                });
            }
        })();
    </script>
}
